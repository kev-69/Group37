# Development Environment Configuration
# Copy this file to .env and modify as needed

# Application Configuration
APP_ENV=development
APP_NAME=atinka-meds-pharmacy
APP_VERSION=1.0.0

# Java Configuration
JAVA_OPTS=-Xmx512m -Xms256m
DEBUG_PORT=5005
DEBUG_ENABLED=true

# Database Configuration (for future use)
POSTGRES_DB=pharmacy_db
POSTGRES_USER=pharmacy
POSTGRES_PASSWORD=pharmacy_secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Data Configuration
DATA_PATH=/app/data
REPORTS_PATH=/app/reports
BACKUP_PATH=/app/backups

# Docker Configuration
COMPOSE_PROJECT_NAME=atinka-meds
COMPOSE_FILE=docker-compose.yml

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=/app/logs

# Network Configuration
NETWORK_NAME=pharmacy-network

# Volume Configuration
DATA_VOLUME=pharmacy_data
REPORTS_VOLUME=pharmacy_reports
DB_VOLUME=pharmacy_db_data

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Resource Limits
MEMORY_LIMIT=1g
CPU_LIMIT=1.0

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=daily
